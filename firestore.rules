
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- Users Collection ---
    // Users can read any profile and query the user list (for leaderboard).
    // Users can ONLY write to their OWN document.
    // Admins can write to ANY user document.
    match /users/{userId} {
      allow read, list: if request.auth.uid != null;
      allow write: if request.auth.uid == userId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';

      // --- Reward Requests Subcollection ---
      // Users can create requests for themselves.
      // Admins can read/write any request.
      match /reward_requests/{requestId} {
        allow create: if request.auth.uid == userId;
        allow read, update, delete: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
      }
    }
    
    // --- Game Settings ---
    // Only admins can read or write game settings.
    match /game_settings/{settingId} {
        allow read, write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
  }
}
